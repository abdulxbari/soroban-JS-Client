{
    "comments": false,
    "presets": [
        [
            "@babel/preset-env",
            {
                "modules": false
            }
        ],
        "@babel/typescript"
    ],
    "plugins": [
        "add-module-exports"
    ],
    "targets": {
        "node": 14,
        "browsers": [ "> 2%" ]          // target modern browsers and ES6
    },
    "env": {
        "development": {
            "comments": true,           // for debugging
            "plugins": [ "istanbul" ]   // for code coverage
        },
        "docs": {
            "comments": true            // for jsdocs
        },
        "production": {}
    }
}